<div class="container">
  <div class="row py-5">
    <div class="col-md-2">
      <%= link_to "Adicionar Post", new_admin_post_path, class: "btn-main-button" %>
    </div>
    <div class="col-md-2">
      <%= link_to "Adicionar Tag", new_admin_tag_path, class: "btn-main-button" %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-4">
          <div class="dashboard-card-header">
            <p>Posts: </h2>
              <h2><%= @posts.count %></h2>
          </div>
        </div>
        <div class="col-md-4">
          <div class="dashboard-card-header">
            <p>Tags: </h2>
              <h2><%= @tags.count %></h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>