<% if flash.any? %>
  <% flash.each do |type, message| %>
    <div class="position-fixed end-0 p-5" style="z-index: 1050;">
      <div class="alert alert-<%= bootstrap_classes_for(type) %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
  <% end %>
<% end %>
